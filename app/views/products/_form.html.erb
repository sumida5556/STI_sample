<%= form_with(model: @product, as: :product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.label :author, style: "display: block" %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :expiration_date, style: "display: block" %>
    <%= form.date_select :expiration_date, id: :product_expiration_date, include_blank: true %>
  </div>

  <div>
    <%= form.label :type, "商品タイプ" %><br>
   
      <%= form.radio_button :type, "Book" %>
    <%= form.label :type_book, "本" %>
   
      <%= form.radio_button :type, "Food" %>
    <%= form.label :type_food, "食べ物" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
