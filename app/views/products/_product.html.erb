<div id="<%= dom_id product %>">
  <div>
    <strong>Name:</strong>
    <%= product.name %>
  </div>

  <div>
    <strong>Price:</strong>
    <%= product.price %>
  </div>

  <div>
    <strong>Author:</strong>
    <%= product.author %>
  </div>

  <div>
    <strong>Expiration date:</strong>
    <%= product.expiration_date %>
  </div>

  <div>
    <strong>Type:</strong>
    <%= product.type %>
  </div>

</div>
